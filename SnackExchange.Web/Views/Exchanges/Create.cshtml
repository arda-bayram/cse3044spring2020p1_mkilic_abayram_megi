@model SnackExchange.Web.Models.Exchange

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Exchange</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExchangeNotes" class="control-label"></label>
                <input asp-for="ExchangeNotes" class="form-control" required />
                <span asp-validation-for="ExchangeNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoUrl" class="control-label"></label>
                <input asp-for="PhotoUrl" class="form-control"  required/>
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div id="orderItemsContainer">
                @Html.EditorFor(model => model.Products)
            </div>
            <div class="row">
                <div class="col-md-4">
                    <input type="button" value="Add Product" class="btn btn-success" id="btnAdd" />
                </div> <br />
                <div class="col-md-2">
                    <input type="submit" value="Create" class="btn btn-primary" id="submit" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $("#btnAdd").on('click', function () {
            $.ajax({
                async: true,
                data: $('#form').serialize(),
                type: "POST",
                url: '/Exchanges/CreateProduct',
                success: function (partialView) {
                    console.log("partialView: "+partialView);
                    $('#orderItemsContainer').html(partialView);
                }
            });
        });
    </script>
}


